# -*- coding: UTF-8 -*-
# ChartingProgress.py

def ChartingProgress():
  posicaoCorreta = 0
  log = open("test.txt", "r")
  posicaoCorreta = 0
  atualizaColunas = True
  for line in log.readlines():
    if not line.strip():
      posicaoCorreta = 0
      atualizaColunas = True
      EscreveLinhaBranca()
    else:
      if(atualizaColunas):
        colunas = len(line) - 2
        atualizaColunas = False
      totalAsterisco = line.count('*')
      posicaoCorreta = EscreveLinha(totalAsterisco, colunas, posicaoCorreta)
  log.close()

def EscreveLinha(totalAsterisco, colunas, posicaoCorreta):
  result = open("result.txt", "a")
  posicaoAtual = 0
  while (posicaoAtual <= colunas):
    if (totalAsterisco > 0 and posicaoAtual == posicaoCorreta):
      result.write('*')
      totalAsterisco -= 1
      posicaoCorreta += 1
    else:
      result.write('.')
    posicaoAtual += 1
  result.write('\n')

  result.close()
  return posicaoCorreta

def EscreveLinhaBranca():
  result = open("result.txt", "a")
  result.write('\n')
  result.close()

ChartingProgress()
