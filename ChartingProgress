# -*- coding: UTF-8 -*-
# ChartingProgress.py

def ChartingProgress():
  posicaoCorreta = 0
  log = open("test.txt", "r")
  for line in log.readlines():
    if(line == '\n'):
      posicaoCorreta = 0
    total = line.count('*')
    if(len(line) > 0):
      colunas = len(line) - 2
    else:
      colunas = 0
    posicaoCorreta=Escreve(total, colunas, posicaoCorreta)
  log.close()

def Escreve(total, colunas, posicaoCorreta):
  col = colunas
  result = open("result.txt", "a")
  posicaoAtual = 0
  while (posicaoAtual <= col):
    if (total > 0 and posicaoAtual == posicaoCorreta):
      result.write('*')
      total -= 1
      posicaoCorreta += 1
    else:
      result.write('.')
    posicaoAtual += 1
  result.write('\n')

  result.close()
  return posicaoCorreta

ChartingProgress()
